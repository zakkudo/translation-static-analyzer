{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src": "src"
    },
    "module": "esnext",
    "target": "es2024",
    "declaration": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "root": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/test.ts", "src/**/*.test.ts"]
}
